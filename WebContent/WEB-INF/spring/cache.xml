<?xml version="1.0" encoding="UTF-8"?>
<beans          xmlns    = "http://www.springframework.org/schema/beans"
                xmlns:xsi= "http://www.w3.org/2001/XMLSchema-instance"
        
       xsi:schemaLocation= "http://www.springframework.org/schema/beans
                            http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

<!-- Cache Service -->
	<bean id="EHCacheManager" name="EHCacheManager" class="org.springframework.cache.ehcache.EhCacheManagerFactoryBean">
		<property name="configLocation">
			<value>/WEB-INF/spring/config/ehcache.xml</value>
		</property>
	</bean>
	
	<bean id="MonitorCacheHashesFB" name="MonitorCacheHashesFB"  class="org.springframework.cache.ehcache.EhCacheFactoryBean">
		<property name="cacheManager">
			<ref bean="EHCacheManager"/>
		</property>
		<property name="cacheName">
			<value>MonitorCacheHashes</value>
		</property>
	</bean>
	
	<bean id="MonitorCacheAmbulancesFB" name="MonitorCacheAmbulancesFB" class="org.springframework.cache.ehcache.EhCacheFactoryBean">
		<property name="cacheManager">
			<ref bean="EHCacheManager"/>
		</property>
		<property name="cacheName">
			<value>MonitorCacheAmbulances</value>
		</property>
	</bean>	

	<bean id="MonitorCacheInterventionFB" name="MonitorCacheInterventionFB" class="org.springframework.cache.ehcache.EhCacheFactoryBean">
		<property name="cacheManager">
			<ref bean="EHCacheManager"/>
		</property>
		<property name="cacheName">
			<value>MonitorCacheIntervention</value>
		</property>
	</bean>	

<!-- END Cache Service -->
</beans>

