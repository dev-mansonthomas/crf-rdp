<?xml version="1.0" encoding="UTF-8"?>
<beans          xmlns    = "http://www.springframework.org/schema/beans"
                xmlns:xsi= "http://www.w3.org/2001/XMLSchema-instance"
        
       xsi:schemaLocation= "http://www.springframework.org/schema/beans
                            http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <!-- url to Controller mapping -->
  <bean id="simpleUrlMapping" name="simpleUrlMapping" 
       class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
       <property name="mappings">
          <props>
            <prop  key="/private/Homepage.html"   >HomepageController</prop>
            <prop  key="/private/monitor/in.html" >MonitorInController</prop>
            <prop  key="/private/monitor/out.html">MonitorOutController</prop>
          </props>
       </property>
  </bean>


  <!-- Controllers -->
  <bean id="HomepageController" name="HomepageController"
       class="fr.croixrouge.irp.controller.HomepageController" autowire="constructor"/>

  <bean id="MonitorInController" name="MonitorInController"
       class="fr.croixrouge.irp.controller.MonitorInController" autowire="constructor">
  </bean>

  <bean id="MonitorOutController" name="MonitorOutController"
       class="fr.croixrouge.irp.controller.MonitorOutController" autowire="constructor">
  </bean>


  <!-- View Resolvers -->
  <bean id="viewResolver"
     class="org.springframework.web.servlet.view.InternalResourceViewResolver">
     <property name="prefix" value="/WEB-INF/jsp/"/>
     <property name="suffix" value=".jsp"/>
  </bean>
</beans>