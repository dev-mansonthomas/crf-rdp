<?xml version="1.0" encoding="UTF-8"?>
<beans          xmlns    = "http://www.springframework.org/schema/beans"
                xmlns:xsi= "http://www.w3.org/2001/XMLSchema-instance"
        
       xsi:schemaLocation= "http://www.springframework.org/schema/beans
                            http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <!-- url to Controller mapping -->
  <bean id="simpleUrlMapping" name="simpleUrlMapping" 
       class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
       <property name="mappings">
          <props>
            <prop  key="/login.html"                  >LoginController</prop>
            <prop  key="/sms.html"                    >SmsController</prop>
            <prop  key="/private/Homepage.html"       >HomepageController</prop>
            <prop  key="/private/monitor/in.html"     >MonitorInController</prop>
            <prop  key="/private/monitor/out.html"    >MonitorOutController</prop>
            <prop  key="/private/test/testThomas.html">TestController</prop>
          </props>
       </property>
  </bean>


  <!-- Controllers -->
  <bean id="SmsController" name="SmsController"
       class="fr.croixrouge.rdp.controller.SmsController" autowire="constructor"/>
  
  
  <bean id="LoginController" name="LoginController"
       class="fr.croixrouge.rdp.controller.LoginController" autowire="constructor"/>
       
  <bean id="HomepageController" name="HomepageController"
       class="fr.croixrouge.rdp.controller.HomepageController" autowire="constructor"/>

  <bean id="MonitorInController" name="MonitorInController"
       class="fr.croixrouge.rdp.controller.MonitorInController" autowire="constructor">
  </bean>

  <bean id="MonitorOutController" name="MonitorOutController"
       class="fr.croixrouge.rdp.controller.MonitorOutController" autowire="constructor">
  </bean>

  <bean id="TestController" name="TestController"
       class="fr.croixrouge.rdp.controller.TestController" autowire="constructor">
  </bean>
  
  <!-- View Resolvers -->
  <bean id="viewResolver"
     class="org.springframework.web.servlet.view.InternalResourceViewResolver">
     <property name="prefix" value="/WEB-INF/jsp/"/>
     <property name="suffix" value=".jsp"/>
  </bean>
</beans>